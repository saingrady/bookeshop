<validators>
    <!--field validators-->
    <field name="firstName">
        <field-validator type="requiredstring">
            <message key="firstName.required"/>
        </field-validator>
    </field>
    <field name="address">
        <field-validator type="requiredstring">
            <message key="address.required"/>
        </field-validator>
    </field>
    <field name="email">
        <field-validator type="requiredstring">
            <message key="email.required"/>
        </field-validator>
        <field-validator type="email">
            <message key="email.invalid"/>
        </field-validator>
    </field>
    <field name="password">
        <field-validator type="requiredstring">
            <message key="password.required"/>
        </field-validator>
    </field>
    <field name="passwordConfirm">
        <field-validator type="requiredstring">
            <message key="passwordConfirm.required"/>
        </field-validator>
    </field>
    <!--action validator-->
    <validator type="expression">
        <param name="expression">password == passwordConfirm</param>
        <message key="password.confirm"/>
    </validator>
</validators>

