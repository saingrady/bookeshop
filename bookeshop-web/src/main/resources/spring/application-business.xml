<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ========================== -->
    <!--   Business configuration   -->
    <!-- ========================== -->

    <bean id="customerManager" class="fr.mbh.bookeshop.business.impl.CustomerManagerImpl">
        <property name="customerDAO" ref="customerDAO"/>
        <property name="messages" ref="messageSource"/>
    </bean>

    <bean id="bookManager" class="fr.mbh.bookeshop.business.impl.BookManagerImpl">
        <property name="bookDAO" ref="bookDAO"/>                    
    </bean>

    <bean id="categoryManager" class="fr.mbh.bookeshop.business.impl.CategoryManagerImpl">
        <property name="categoryDAO" ref="categoryDAO"/>
    </bean>

    <bean id="orderManager" class="fr.mbh.bookeshop.business.impl.OrderManagerImpl">
        <property name="orderDAO" ref="orderDAO"/>
        <property name="orderItemDAO" ref="orderItemDAO"/>
        <property name="orderStatusDAO" ref="orderStatusDAO"/>
        <property name="bookManager" ref="bookManager"/>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basename" value="business_exceptions"/>
    </bean>

    <bean id="theCart" class="org.benassi.bookeshop.web.cart.ShoppingCartImpl" scope="session"/>

    <bean id="loggedCustomer" class="fr.mbh.bookeshop.dao.domain.Customer" scope="session"/>

</beans>