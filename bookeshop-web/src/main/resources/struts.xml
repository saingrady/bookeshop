<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

    <package name="book" extends="struts-default">

        <global-results>
            <result name="error">/WEB-INF/jsp/error.jsp</result>
        </global-results>

        <action name="catalogue" class="org.benassi.bookeshop.web.actions.book.BookCatalogueAction">
            <result>/WEB-INF/jsp/catalogue.jsp</result>
        </action>

        <action name="bookDetails" class="org.benassi.bookeshop.web.actions.book.BookDetailsAction">
            <result>/WEB-INF/jsp/book-details.jsp</result>
        </action>

        <action name="category" class="org.benassi.bookeshop.web.actions.book.BookCategoryAction">
            <result>/WEB-INF/jsp/category.jsp</result>
        </action>

        <action name="search" class="org.benassi.bookeshop.web.actions.book.SearchBookAction">
            <interceptor-ref name="defaultStack"/><!-- need to be added. See executeAndWaitStack in struts-default.xml -->
            <interceptor-ref name="execAndWait"/>
            <result name="wait">/WEB-INF/jsp/processing.jsp</result>
            <result>/WEB-INF/jsp/search-result.jsp</result>
        </action>

    </package>

    <package name="customer" extends="struts-default">

        <global-results>
            <result name="error">/WEB-INF/jsp/error.jsp</result>
        </global-results>

        <action name="login" class="org.benassi.bookeshop.web.actions.customer.LoginAction">
            <result type="redirectAction">
                <param name="actionName">catalogue</param>
            </result>
        </action>

        <action name="logout" class="org.benassi.bookeshop.web.actions.customer.LogoutAction">
            <result type="redirectAction">
                <param name="actionName">catalogue</param>
            </result>
        </action>

        <action name="update" class="org.benassi.bookeshop.web.actions.customer.UpdateAction">
            <result>/WEB-INF/jsp/update-account.jsp</result>
        </action>

        <action name="update-account" class="org.benassi.bookeshop.web.actions.customer.AccountAction" method="update">
            <result name="input">/WEB-INF/jsp/update-account.jsp</result>
            <result type="redirectAction">
                <param name="actionName">catalogue</param>
            </result>
        </action>


        <action name="create" class="org.benassi.bookeshop.web.actions.customer.CreateAction">
            <result>/WEB-INF/jsp/create-account.jsp</result>
        </action>

        <action name="create-account" class="org.benassi.bookeshop.web.actions.customer.AccountAction" method="create">
            <result name="input">/WEB-INF/jsp/create-account.jsp</result>
            <result type="redirectAction">
                <param name="actionName">catalogue</param>
            </result>
        </action>

        <action name="remove" class="org.benassi.bookeshop.web.actions.customer.AccountAction" method="remove">
            <result name="input">/WEB-INF/jsp/update-account.jsp</result>
            <result type="redirectAction">
                <param name="actionName">catalogue</param>
            </result>
        </action>

        <action name="orders" class="org.benassi.bookeshop.web.actions.customer.OrderAction">
            <result>/WEB-INF/jsp/orders.jsp</result>
        </action>

        <action name="orderDetails" class="org.benassi.bookeshop.web.actions.customer.OrderDetailsAction">
            <result>/WEB-INF/jsp/order-details.jsp</result>
        </action>

    </package>


    <package name="cart" extends="struts-default">

        <interceptors>
            <interceptor name="confirmOrderByMail" class="org.benassi.bookeshop.web.interceptors.ConfirmationEmailInterceptor"/>
        </interceptors>

        <global-results>
            <result name="error">/WEB-INF/jsp/error.jsp</result>
        </global-results>

        <action name="cartDetails" class="org.benassi.bookeshop.web.actions.cart.CartDetailsAction">
            <result>/WEB-INF/jsp/cart-details.jsp</result>
        </action>

        <action name="checkout" class="org.benassi.bookeshop.web.actions.cart.CheckoutAction">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="confirmOrderByMail"/>
            <result name="wait">/WEB-INF/jsp/processing.jsp</result>
            <result>/WEB-INF/jsp/confirm-order.jsp</result>
        </action>

        <action name="addItem" class="org.benassi.bookeshop.web.actions.cart.UpdateCartAction" method="addItem">
            <result type="redirectAction">
                <param name="actionName">cartDetails</param>
            </result>
        </action>

        <action name="removeItem" class="org.benassi.bookeshop.web.actions.cart.UpdateCartAction" method="removeItem">
            <result type="redirectAction">
                <param name="actionName">cartDetails</param>
            </result>
        </action>

        <action name="clearCart" class="org.benassi.bookeshop.web.actions.cart.UpdateCartAction" method="clearCart">
            <result type="redirectAction">
                <param name="actionName">catalogue</param>
            </result>
        </action>

    </package>

    <package name="utils" extends="struts-default">

        <action name="index" class="org.benassi.bookeshop.web.actions.IndexAction">
            <result type="redirectAction">
                <param name="actionName">catalogue</param>
            </result>
        </action>

        <action name="about" class="org.benassi.bookeshop.web.actions.AboutAction">
            <result>/WEB-INF/jsp/about.jsp</result>
        </action>

        <action name="contact" class="org.benassi.bookeshop.web.actions.ContactAction">
            <result>/WEB-INF/jsp/contact.jsp</result>
        </action>

        <action name="nyi" class="org.benassi.bookeshop.web.actions.NotYetImplementedAction">
            <result>/WEB-INF/jsp/not-yet-implemented.jsp</result>
        </action>

        <action name="download-catalogue" class="org.benassi.bookeshop.web.actions.DownloadCatalogueAction">
            <result name="success" type="stream">
                <param name="contentDisposition">attachment;filename=catalogue.pdf</param>
                <param name="contentType">application/pdf</param>
                <param name="inputName">inputStream</param>
                <param name="bufferSize">1024</param>
            </result>
        </action>

    </package>    

</struts>
