<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="org.benassi.bookeshop.web.actions" extends="struts-default">

        <global-results>
            <result name="error">/WEB-INF/jsp/error.jsp</result>
        </global-results>

        <action name="index" class="org.benassi.bookeshop.web.actions.IndexAction">
			<result type="redirectAction">
                <param name="actionName">catalog</param>
			</result>
		</action>

        <action name="catalog" class="org.benassi.bookeshop.web.actions.book.BookCatalogueAction">
			<result>/WEB-INF/jsp/catalog.jsp</result>
		</action>

        <action name="bookDetails" class="org.benassi.bookeshop.web.actions.book.BookDetailsAction">
			<result>/WEB-INF/jsp/book-details.jsp</result>
		</action>

        <action name="category" class="org.benassi.bookeshop.web.actions.book.BookCategoryAction">
			<result>/WEB-INF/jsp/category.jsp</result>
		</action>

        <action name="nyi" class="org.benassi.bookeshop.web.actions.NotYetImplementedAction">
			<result>/WEB-INF/jsp/not-yet-implemented.jsp</result>
		</action>

        <action name="login" class="org.benassi.bookeshop.web.actions.customer.LoginAction">
            <result type="redirectAction">
                <param name="actionName">catalog</param>
            </result>
		</action>

        <action name="logout" class="org.benassi.bookeshop.web.actions.customer.LogoutAction">
            <result type="redirectAction">
                <param name="actionName">catalog</param>
            </result>
        </action>

        <action name="update" class="org.benassi.bookeshop.web.actions.customer.UpdateAction">
            <result>/WEB-INF/jsp/update-account.jsp</result>
        </action>

        <action name="update-account" class="org.benassi.bookeshop.web.actions.customer.UpdateAccountAction">
            <result type="redirectAction">
                <param name="actionName">catalog</param>
            </result>
        </action>

        <action name="search" class="org.benassi.bookeshop.web.actions.book.SearchBookAction">
            <result>/WEB-INF/jsp/search.jsp</result>
        </action>

        <action name="create" class="org.benassi.bookeshop.web.actions.customer.CreateAction">
            <result>/WEB-INF/jsp/create-account.jsp</result>
        </action>

        <action name="create-account" class="org.benassi.bookeshop.web.actions.customer.CreateAccountAction">
            <result type="redirectAction">
                <param name="actionName">catalog</param>
            </result>
        </action>

        <action name="pdf-catalog" class="org.benassi.bookeshop.web.actions.DownloadCatalogueAction">
            <result type="redirectAction">
                <param name="actionName">catalog</param>
            </result>
		</action>

        <action name="cart" class="org.benassi.bookeshop.web.actions.cart.CartDetailsAction">
            <result>/WEB-INF/jsp/cart-details.jsp</result>
            <result name="login">/WEB-INF/jsp/login.jsp</result>
		</action>

        <action name="checkout" class="org.benassi.bookeshop.web.actions.cart.CheckoutAction">
            <result>/WEB-INF/jsp/confirm.jsp</result>
		</action>

        <action name="update-cart" class="org.benassi.bookeshop.web.actions.cart.UpdateCartAction">
            <result name="catalog" type="redirectAction">
                <param name="actionName">catalog</param>
            </result>
            <result name="category" type="redirectAction">
                <param name="actionName">category</param>
            </result>
            <result name="cart" type="redirectAction">
                <param name="actionName">cart</param>
            </result>
		</action>



	</package>
</struts>
