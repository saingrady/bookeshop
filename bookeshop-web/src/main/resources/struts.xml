<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="org.benassi.bookeshop.web.actions" extends="struts-default">
        <action name="index" class="org.benassi.bookeshop.web.actions.IndexAction">
			<result type="redirectAction">
                <param name="actionName">catalog</param>
			</result>
		</action>
        <action name="catalog" class="org.benassi.bookeshop.web.actions.CatalogAction">
			<result>/WEB-INF/jsp/catalog.jsp</result>
		</action>
        <action name="bookDetails" class="org.benassi.bookeshop.web.actions.BookDetailsAction">
			<result>/WEB-INF/jsp/book-details.jsp</result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</action>
        <action name="category" class="org.benassi.bookeshop.web.actions.CategoryAction">
			<result>/WEB-INF/jsp/category.jsp</result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</action>
        <action name="nyi" class="org.benassi.bookeshop.web.actions.NotYetImplementedAction">
			<result>/WEB-INF/jsp/not-yet-implemented.jsp</result>
		</action>
        <action name="login" class="org.benassi.bookeshop.web.actions.LoginAction">
            <result type="redirectAction">
                <param name="actionName">catalog</param>
            </result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</action>
        <action name="logout" class="org.benassi.bookeshop.web.actions.LogoutAction">
            <result type="redirectAction">
                <param name="actionName">catalog</param>
            </result>
        </action>
        <action name="update" class="org.benassi.bookeshop.web.actions.UpdateAction">
            <result>/WEB-INF/jsp/update-account.jsp</result>
        </action>
        <action name="update-account" class="org.benassi.bookeshop.web.actions.UpdateAccountAction">
            <result type="redirectAction">
                <param name="actionName">catalog</param>
            </result>
			<result name="error">/WEB-INF/jsp/error.jsp</result>
		</action>

	</package>
</struts>
