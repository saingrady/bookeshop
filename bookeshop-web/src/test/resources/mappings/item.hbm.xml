<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.benassi.bookeshop.data.model.OrderItem" table="book_order_item">
    <id name="itemId">
      <generator class="increment"/>
    </id>
    <!--<many-to-one name="order" class="org.benassi.bookeshop.data.model.Book" lazy="false" unique="true"/>-->
    <property name="orderId"/>
    <!--<many-to-one name="book" class="org.benassi.bookeshop.data.model.Book" lazy="false"/>-->
    <property name="bookId"/>
    <property name="quantity"/>
    <property name="purchasePrice"/>

  </class>
</hibernate-mapping>
