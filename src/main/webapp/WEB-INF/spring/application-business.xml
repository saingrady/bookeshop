<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- ========================== -->
    <!--   Business configuration   -->
    <!-- ========================== -->

    <bean id="customerManager" class="fr.mbh.bookeshop.business.impl.CustomerManagerImpl">
        <property name="customerDAO" ref="customerDAO"/>
    </bean>

    <bean id="bookManager" class="fr.mbh.bookeshop.business.impl.BookManagerImpl">
        <property name="bookDAO" ref="bookDAO"/>
    </bean>

    <bean id="categoryManager" class="fr.mbh.bookeshop.business.impl.CategoryManagerImpl">
        <property name="categoryDAO" ref="categoryDAO"/>
    </bean>

    <!-- may be used instead of http session attributes
    <bean id="theCart" class="fr.mbh.bookeshop.util.cart.ShoppingCartImpl" scope="session"/>

    <bean id="loggedCustomer" class="fr.mbh.bookeshop.domain.Customer" scope="session"/>-->

</beans>